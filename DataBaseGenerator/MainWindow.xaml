<Window x:Class="DataBaseGenerator.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:DataBaseGenerator.UI.Wpf"
        d:DataContext="{d:DesignInstance Type=wpf:MainViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="DataBase Generator"
        Height="450"
        Width="800"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen">


    <Grid ShowGridLines="False">


        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Name="PatientTable"
            Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <ListView Name="ViewAllPatient"
                      ItemsSource="{Binding AllPatients}"
                      Margin="5">
                
                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="Id"
                                        DisplayMemberBinding="{Binding ID_Patient}"/>

                        <GridViewColumn Header="PatientId"
                                        DisplayMemberBinding="{Binding PatientID}"/>

                        <GridViewColumn Header="LastName"
                                        DisplayMemberBinding="{Binding LastName}"/>

                        <GridViewColumn Header="FirstName"
                                        DisplayMemberBinding="{Binding FirstName}"/>

                        <GridViewColumn Header="MiddleName"
                                        DisplayMemberBinding="{Binding MiddleName}"/>

                        <GridViewColumn Header="BirthDate"
                                        DisplayMemberBinding="{Binding BirthDate}"/>

                        <GridViewColumn Header="Sex"
                                        DisplayMemberBinding="{Binding Sex}"/>

                        <GridViewColumn Header="Address"
                                        DisplayMemberBinding="{Binding Address}"/>

                        <GridViewColumn Header="AddInfo"
                                        DisplayMemberBinding="{Binding AddInfo}"/>

                        <GridViewColumn Header="Occupation"
                                        DisplayMemberBinding="{Binding Occupation}"/>

                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>

        <Grid Name="ButtonRefresh"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Margin="5">

            <Button Name="Refresh"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Right"
                    Content="Refresh"
                    Command="{Binding RefreshPatients}" />


        </Grid>


        <Grid Name="WorkListTable"
              Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <ListView Name="WorkList"
                      
                      Margin="5">

                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="Id"
                                        DisplayMemberBinding="{Binding ID_WorkList}"/>

                        <GridViewColumn Header="LastName"
                                        DisplayMemberBinding="{Binding CreateDate}"/>

                        <GridViewColumn Header="FirstName"
                                        DisplayMemberBinding="{Binding CreateTime}"/>

                        <GridViewColumn Header="MiddleName"
                                        DisplayMemberBinding="{Binding CompleteDate}"/>

                        <GridViewColumn Header="PatientId"
                                        DisplayMemberBinding="{Binding CompleteTime}"/>

                        <GridViewColumn Header="BirthDate"
                                        DisplayMemberBinding="{Binding ID_Patient}"/>

                        <GridViewColumn Header="Sex"
                                        DisplayMemberBinding="{Binding State}"/>

                        <GridViewColumn Header="Address"
                                        DisplayMemberBinding="{Binding SOPInstanceUID}"/>

                        <GridViewColumn Header="AddInfo"
                                        DisplayMemberBinding="{Binding Modality}"/>

                        <GridViewColumn Header="Occupation"
                                        DisplayMemberBinding="{Binding StationAeTitle}"/>

                        <GridViewColumn Header="BirthDate"
                                        DisplayMemberBinding="{Binding BirtProcedureStepStartDateTimehDate}"/>

                        <GridViewColumn Header="Sex"
                                        DisplayMemberBinding="{Binding PerformingPhysiciansName}"/>

                        <GridViewColumn Header="Address"
                                        DisplayMemberBinding="{Binding StudyDescription}"/>

                        <GridViewColumn Header="AddInfo"
                                        DisplayMemberBinding="{Binding ReferringPhysiciansName}"/>

                        <GridViewColumn Header="Occupation"
                                        DisplayMemberBinding="{Binding RequestingPhysician}"/>

                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>


        <Grid Name="ViewUpdateText"
              Grid.Row="3"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <TextBox Name="UpdateText"
                     Margin="5"
                     FontSize="22"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Text="{Binding UpdateText, UpdateSourceTrigger= PropertyChanged}"
                     IsReadOnly="True" />

        </Grid>
        

        <Grid Name="ButtonConnect"
              Grid.Row="4"
              Grid.Column="0"
              Margin="5">

            <Button Name="Connect"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Left"
                    Content="Connect"
                    Command="{Binding ConnectDB}" />

            
            <Button Name="Add"
                        Width="150"
                        Height="50"
                        HorizontalAlignment="Right"
                        Content="Add"
                        Command="{Binding AddPatient}" />

            
        </Grid>
        

        <Grid Name="ButtonSelect"
              Grid.Row="4"
              Grid.Column="1"
              Margin="5">

            <Button Name="Select"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Left"
                    Content="Request"
                    Command="{Binding SelectDb}" />

            <Button Name="Delete"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Right"
                    Content="Delete"
                    Command="{Binding DeletePatient}" />

        </Grid>


    </Grid>
</Window>