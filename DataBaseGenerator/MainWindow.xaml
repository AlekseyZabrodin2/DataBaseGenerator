<Window x:Class="DataBaseGenerator.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:DataBaseGenerator.UI.Wpf"
        d:DataContext="{d:DesignInstance Type=wpf:MainViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="DataBase Generator"
        Height="450"
        Width="800"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen">


    <Grid ShowGridLines="False">


        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Name="PatientTable"
            Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <ListView Name="ViewAllPatient"
                      ItemsSource="{Binding AllPatients}"
                      Margin="5">
                
                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="ID_Patient"
                                        DisplayMemberBinding="{Binding ID_Patient}"/>

                        <GridViewColumn Header="PatientID"
                                        DisplayMemberBinding="{Binding PatientID}"/>

                        <GridViewColumn Header="LastName"
                                        DisplayMemberBinding="{Binding LastName}"/>

                        <GridViewColumn Header="FirstName"
                                        DisplayMemberBinding="{Binding FirstName}"/>

                        <GridViewColumn Header="MiddleName"
                                        DisplayMemberBinding="{Binding MiddleName}"/>

                        <GridViewColumn Header="BirthDate"
                                        DisplayMemberBinding="{Binding BirthDate}"/>

                        <GridViewColumn Header="Sex"
                                        DisplayMemberBinding="{Binding Sex}"/>

                        <GridViewColumn Header="Address"
                                        DisplayMemberBinding="{Binding Address}"/>

                        <GridViewColumn Header="AddInfo"
                                        DisplayMemberBinding="{Binding AddInfo}"/>

                        <GridViewColumn Header="Occupation"
                                        DisplayMemberBinding="{Binding Occupation}"/>

                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>

        <Grid Name="ButtonRefreshPatient"
              Grid.Row="1"
              Grid.Column="1"
              Margin="5">

            <Button Name="RefreshPatient"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Center"
                    Content="Refresh Patient"
                    Command="{Binding RefreshPatients}"/>


        </Grid>

        <Grid Name="ButtonRefreshWorkList"
              Grid.Row="1"
              Grid.Column="0"
              Margin="5">

            <Button Name="RefreshWorkList"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Center"
                    Content="Refresh WorkList"
                    Command="{Binding RefreshWorkList}"/>


        </Grid>


        <Grid Name="WorkListTable"
              Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <ListView Name="ViewAllWorkList"
                      ItemsSource="{Binding AllWorkLists}"
                      Margin="5">

                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="ID_WorkList"
                                        DisplayMemberBinding="{Binding ID_WorkList}"/>

                        <GridViewColumn Header="CreateDate"
                                        DisplayMemberBinding="{Binding CreateDate}"/>

                        <GridViewColumn Header="CreateTime"
                                        DisplayMemberBinding="{Binding CreateTime}"/>

                        <GridViewColumn Header="CompleteDate"
                                        DisplayMemberBinding="{Binding CompleteDate}"/>

                        <GridViewColumn Header="CompleteTime"
                                        DisplayMemberBinding="{Binding CompleteTime}"/>

                        <GridViewColumn Header="ID_Patient"
                                        DisplayMemberBinding="{Binding ID_Patient}"/>

                        <GridViewColumn Header="State"
                                        DisplayMemberBinding="{Binding State}"/>

                        <GridViewColumn Header="SOPInstanceUID"
                                        DisplayMemberBinding="{Binding SOPInstanceUID}"/>

                        <GridViewColumn Header="Modality"
                                        DisplayMemberBinding="{Binding Modality}"/>

                        <GridViewColumn Header="StationAeTitle"
                                        DisplayMemberBinding="{Binding StationAeTitle}"/>

                        <GridViewColumn Header="BirtProcedureStepStartDateTimehDate"
                                        DisplayMemberBinding="{Binding BirtProcedureStepStartDateTimehDate}"/>

                        <GridViewColumn Header="PerformingPhysiciansName"
                                        DisplayMemberBinding="{Binding PerformingPhysiciansName}"/>

                        <GridViewColumn Header="StudyDescription"
                                        DisplayMemberBinding="{Binding StudyDescription}"/>

                        <GridViewColumn Header="ReferringPhysiciansName"
                                        DisplayMemberBinding="{Binding ReferringPhysiciansName}"/>

                        <GridViewColumn Header="RequestingPhysician"
                                        DisplayMemberBinding="{Binding RequestingPhysician}"/>

                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>


        <Grid Name="ViewUpdateText"
              Grid.Row="3"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <TextBox Name="UpdateText"
                     Margin="5"
                     FontSize="22"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Text="{Binding UpdateText, UpdateSourceTrigger= PropertyChanged}"
                     IsReadOnly="True" />

        </Grid>
        

        <Grid Name="ButtonConnect"
              Grid.Row="4"
              Grid.Column="0"
              Margin="5">

            <Button Name="Connect"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Left"
                    Content="Connect"
                    Command="{Binding ConnectDB}" />


            <Button Name="AddPatient"
                        Width="150"
                        Height="50"
                        HorizontalAlignment="Right"
                        Content="AddPatient"
                        Command="{Binding AddPatient}" />

            
        </Grid>
        

        <Grid Name="ButtonSelect"
              Grid.Row="4"
              Grid.Column="1"
              Margin="5">

            <Button Name="AddWorkList"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Left"
                    Content="AddWorkList"
                    Command="{Binding AddWorkList}" />

            <Button Name="Delete"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Right"
                    Content="Delete"
                    Command="{Binding DeletePatient}" />

        </Grid>


    </Grid>
</Window>