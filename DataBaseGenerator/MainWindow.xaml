<Window x:Class="DataBaseGenerator.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:DataBaseGenerator.UI.Wpf"
        xmlns:core="clr-namespace:DataBaseGenerator.Core;assembly=DataBaseGenerator.Core"
        d:DataContext="{d:DesignInstance Type=wpf:MainViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="DataBase Generator" 
        Height="450" 
        Width="800"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen">


    <Grid ShowGridLines="False">


        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <TextBox Name="UpdateText"
                     Margin="5"
                     FontSize="22"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     Text="{Binding UpdateText, UpdateSourceTrigger= PropertyChanged}"
                     IsReadOnly="True">
            </TextBox>

        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="2">


        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="0">

            <Button Name="Connect"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Center"
                    Content="Connect"
                    Command="{Binding ConnectDB}">
            </Button>

        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="1">

            <Button Name="Select"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Center"
                    Content="Request"
                    Command="{Binding SelectDb}">
            </Button>

        </Grid>



    </Grid>
</Window>
